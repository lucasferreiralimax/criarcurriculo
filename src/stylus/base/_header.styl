.header
  height 300px
  color #666
  letter-spacing .8px
  user-select none
  -webkit-tap-highlight-color rgba(255, 255, 255, 0) !important
  -webkit-focus-ring-color rgba(255, 255, 255, 0) !important
  outline none
  will-change opacity, translate, scale
  z-index 9
  position relative
  &.active.fixedFooter
    transform translateY(-70px)
  &.active
    box-shadow 0 4px 20px rgba(#000, .4), 0 3px 0 color5 - 60, 0 6px 30px rgba(color1,.3), inset 0 2px rgba(#fff,.3), inset 0 -2px 13px rgba(color4,.3)
    width 100%
    height 65px
    background color4
    background radial-gradient(ellipse farthest-corner at 50% 100%, color5 0%, color4 50%)
    position fixed
    padding 0
    margin 0
    top 0
    left 0
    transition .3s transform
    .nav-menu.active
      opacity 1
      pointer-events all
    .btn.menu
      display block !important
    .logo
      max-width 100% !important
      margin 0
      font-size 1.5em
      display block
      top 20px
    +tablet()
      .nav-menu
        position absolute
        top 0
        left 65px
        opacity 0
        pointer-events none
        .btn
          border-radius 0
          &.router-link-exact-active
            background color2 - 20
            color color1
            border-color color2 - 60
            box-shadow 0 3px 0 color2 - 60, 0 -6px 10px color4, inset 0 2px rgba(#fff,.6), inset 0 2px 13px rgba(color3,.3)
            text-shadow 0 1px 3px color4
            transform translateY(0)
          &:hover
            background color5
            color color1
            border-color color5 - 60
            box-shadow 0 3px 0 color5 - 60, 0 6px 30px rgba(color1,.3), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4,.3)
            text-shadow 0 1px color5 - 90
            transform translateY(1.5px)
