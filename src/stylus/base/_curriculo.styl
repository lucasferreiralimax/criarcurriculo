#curriculo, .curriculo-actions
  padding 1em 11px 0
  box-sizing border-box
  +tablet()
    width 50%
    max-width 50%

.home .container
  +ultrawide()
    width 100%
    max-width 70%
    margin 0 auto

.mark
  background rgba(color4, .9)
  box-sizing border-box
  color color1
  display block
  font-weight normal
  line-height 2em
  margin 2em 0
  padding 4em 2em
  width 100%
  position relative
  h1,  h2
    margin-bottom 1em
