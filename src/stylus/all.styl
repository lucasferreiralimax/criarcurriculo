@import 'config/_reset'
@import 'mixins/**'
@import 'config/_variables'

@import url('https://fonts.googleapis.com/css?family=Abel|Play|Rajdhani&display=swap')

*
  -webkit-focus-ring-color rgba(255, 255, 255, 0) !important
  -webkit-tap-highlight-color rgba(255, 255, 255, 0) !important
  background transparent
  box-sizing border-box

::selection
  background color2
  color color2 - 190

::-webkit-scrollbar-track
	background #fff

::-webkit-scrollbar
	background-color rgba(#000,.2)
	width 15px

::-webkit-scrollbar-thumb
	background-color rgba(#000,.2)
	border-radius 12px
	box-shadow inset 0 0 0 1px rgba(#fff, .2)

html, body
  height 100vh
  height auto
  margin 0
  padding 0
  // scroll-behavior smooth
  width 100%

body
  background #1b1f23
  box-sizing border-box
  font-family Arial
  font-size 16px
  font-weight bold
  height 100%
  min-height 100%
  overflow-x hidden
  position relative
  &.active-menu
    overflow hidden
  &::-webkit-scrollbar-track
	  background transparent
h1
  font-size 2.5em
h2
  font-size 1.8em
a
  color color2
  text-decoration none

pre
  font-family Arial
  line-height 20px
  white-space pre-wrap

.ghost
  opacity 0.5

@import '_app-print'
@import 'base/_curriculo'

@import 'components/**'
@import 'themes/**'
