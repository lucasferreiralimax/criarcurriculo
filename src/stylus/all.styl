/* Import Reset 1 1 1 */
@import 'config/_reset'
@import 'config/_mixins'
@import 'config/_variables'
@import './../node_modules/jeet'

*
  background transparent
  &:after
    content ''
    clear both
    display table

/* All.styl */
::selection
  color color2 - 90
  background color2

::-webkit-scrollbar-track
	background #fff
::-webkit-scrollbar
	width 6px
	background-color rgba(#fff,0)
::-webkit-scrollbar-thumb
	border-radius 10px
	-webkit-box-shadow inset 0 0 6px rgba(0,0,0,0)
	background-color rgba(#000,.2)

html, body
  height auto
  margin 0
  padding 0
  width 100%
  height 100vh

body
  background linear-gradient(color4, color6) fixed
  box-sizing border-box
  color color4
  font-family Arial
  font-size 16px
  font-weight bold  
  height 100%
  min-height 100%
  overflow-x hidden
  position relative
  &.active-menu
    overflow hidden
h1
  font-size 2.5em
h2
  font-size 1.8em
a
  color color2
  text-decoration none

pre
  font-family Arial
  font-size 14px
  white-space pre-wrap
  line-height 20px

@import '_app-print'


@import 'base/_header'
@import 'base/_curriculo'
@import 'base/_footer'

@import 'components/_logo'
@import 'components/_nav'
@import 'components/_box'
@import 'components/_buttons'
@import 'components/_animate'
@import 'components/_helpers'

@import 'components/_render'

@import 'themes/**'
