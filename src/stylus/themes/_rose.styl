color1_rose = #FCFCFC
color2_rose = #FFD166
color3_rose = #EF476F
color4_rose = #440927
color5_rose = #cc1a58 + 30
color6_rose = #abc
color7_rose = red + 130

.rose
  background color4_rose url('./assets/rosa.jpg') no-repeat fixed bottom center
  background-size cover
  .header
    &.active
      box-shadow 0 4px 20px rgba(#000, .4), 0 3px 0 color4_rose + 10, 0 6px 30px rgba(color4_rose,.3), inset 0 2px rgba(#fff,.3), inset 0 -2px 13px rgba(color4_rose,.3)
      background color4_rose
  .logo
    color color1 + 10
    text-shadow 0 5px color4_rose,
                0 -2px color4_rose,
                2px 0 color4_rose,
                -2px 0 color4_rose,
                2px 4px color4_rose,
                -2px 4px color4_rose,
                0 3px 20px color4_rose,
                0 6px 60px color5_rose
    &:hover
      color color2
      text-shadow 0 5px color4_rose,
                  0 -2px color4_rose,
                  2px 0 color4_rose,
                  -2px 0 color4_rose,
                  2px 4px color4_rose,
                  -2px 4px color4_rose,
                  0 3px 20px color4_rose,
                  0 6px 70px color2 _rose
  .btn
    background color4_rose + 30
    border 1px solid color4_rose
    box-shadow inset 0 2px rgba(#fff,.3), 0 3px 10px color4_rose, inset 0 -2px 13px rgba(green - 22,.3) !important
    color color1_rose + 30
    &:hover
      background color5_rose
      border-color color5_rose - 60
      box-shadow 0 3px 0 color5_rose - 60, 0 6px 30px rgba(color5_rose, .6), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4_rose,.3)
      color color1_rose
      text-shadow 0 1px 3px color2_rose - 130
      svg
        filter drop-shadow(0px 1px color2_rose - 100)
    &:active
      background color2_rose - 20
      border-color color2_rose - 60
      box-shadow 0 0px 0 color3_rose - 60, 0 3px 10px color2_rose - 100, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3_rose,.3)
      color color2_rose - 100
      path
        fill color2_rose - 100
    path
      fill color1_rose
  .nav
    +tablet()
      &.active.active_show .nav-menu
        box-shadow 0 0 200px 100px color2_rose
  .nav-menu
    background linear-gradient(to bottom, color4_rose - 30 50%, rgba(color5_rose,.5))
    +tablet()
      background transparent
  #curriculo
    legend
      border 0
    label,
    legend,
    .radio
      text-shadow 0 2px 10px rgba(#000, .5)
      background rgba(color4_rose + 30, .95)
      box-shadow 0 0 30px rgba(color5_rose - 30, .3)
      color color1_rose
      &.error
        input, select, textarea, label
          box-shadow 0 0 0 2px red, 0 0 0 3px #fff, 0 0 30px red
        [type="radio"]
          box-shadow none
      .error-msg
        color #fff
        text-shadow 0 2px 10px #000
        background linear-gradient(to right, red, rgba(red,0))
        padding 10px
        border-radius 6px
  .mark
    background rgba(color4_rose, .6)
    box-shadow 0 0 60px 10px rgba(color5_rose, .6)
    color color1_rose
    margin 2em 0
    padding 4em 2em
    text-shadow 0 3px color4_rose
  .render
    color color5_rose
    h1, h2
      color color4_rose
@media print
  .rose .render
    color color5_rose !important
    h1, h2
      color color4_rose !important
