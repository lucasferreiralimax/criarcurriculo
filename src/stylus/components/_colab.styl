.colab
  margin-top 2em
  .flexbox
    display flex
    justify-content center
  .people
    cursor pointer
    transition .3s all
    &:hover
      transform scale(1.1)
      img
        animation power 1s infinite alternate
        border-radius 50%
        box-shadow 0 0 0 2px #fff, 0 0 20px 10px color2
        cursor crosshair
    figure
      width 200px
    img
      border-radius 10px
      box-shadow 0 0 0 3px rgba(#fff, .3), 0 0 20px 10px rgba(#000, .1)
      transition .7s all
      width 100%
.hitech
  margin 0 auto
  max-width 700px
  &:hover
    background radial-gradient(ellipse 50% 50%, rgba(color2, .5), rgba(#000, 0) 80%)
    color color2
    .credits_logo
      filter grayscale(100%) drop-shadow(0 2px 10px color2)
      opacity .5
      transform scale(.9)
      z-index 1
      &:hover
        filter grayscale(0) drop-shadow(0 2px 10px #fff)
        opacity 1
        transform scale(1.4)
        z-index 9
.credits_logo
  color #fff
  display inline-block
  filter drop-shadow(0 2px 10px #fff)
  margin-bottom 1em
  margin-right 3em
  text-shadow 0 2px 2px rgba(#000, .5)
  transition .5s all
  &:hover
    filter grayscale(0) drop-shadow(0 2px 10px #fff)
    position relative
    transform scale(1.4)
    transition .3s all
    will-change all
    z-index 9
  &:last-of-type
    margin 0
