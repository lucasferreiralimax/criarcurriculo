.nav
  position relative
.nav-menu
  background linear-gradient(color4, rgba(color4, .6))
  padding 20px 10px
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 99
  filter blur(100px)
  transform translate(-100vw)
  transition all .35s
  &.active
    transform translate(0)
    filter blur(0px)
  .title
    font-size 1.5em
    color color1
    +tablet()
      display none
  .title,
  .btn
    text-align center
    margin-bottom 1em
  .btn:last-of-type
    margin-bottom 0
  +tablet()
    width 70%
    background transparent
    position relative
    margin 0  auto
    transform translate(0)
    filter blur(0px)
    .btn
      width 33%
      float left
      margin 0
      border-radius 0
      &:first-of-type
        border-radius 6px 0 0 6px
      &:last-of-type
        border-radius 0 6px 6px 0
  +desktop()
    width 30%
