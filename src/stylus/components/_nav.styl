.nav-menu
  background linear-gradient(to bottom, color4 - 30 50%, rgba(color5,.5))
  text-align center
  display block
  clear both
  position relative
  width 100%
  height 100%
  margin 0 auto
  user-select none
  transition .5s all
  transform translateX(-999px)
  opacity 0
  position fixed
  top 0
  left 0
  z-index 998
  &.active
    transform translateX(0)
    opacity 1
  .title
    color #fff
    font-size 1.5em
    padding 15px
  .btn
    width calc(100% - 1em)
    margin 10px auto
    +tablet()
      margin-right 20px
      &:last-of-type
        margin-right 0
  +tablet()
    width 70%
    background rgba(#222, 0)
    box-shadow none
    position relative
    transform translateX(0)
    padding-top 0
    display flex
    opacity 1
    .title
      display none
    .btn
      margin 0
      border-radius 0
      z-index -1 !important
      &:first-of-type
        border-radius 6px 0 0 6px
        border-right 0
      &:last-of-type
        border-radius 0 6px 6px 0
        border-left 0
    &:after
      content ''
      display table
      clear both
  +desktop()
    width 40%
  +ultrawide()
    width 30%
