button
  border 0
  padding 0
  outline none
.btn
  animation force 5s infinite alternate
  background color4 + 30
  border 1px solid color4
  border-radius 6px
  box-shadow inset 0 2px rgba(#fff,.3), 0 3px 10px color4, inset 0 -2px 13px rgba(green - 22,.3)
  box-sizing border-box
  color color1
  cursor pointer
  display block
  font-size 20px
  font-weight 100
  line-height 23px
  outline none
  padding 20px
  position relative
  text-decoration none
  transition .3s all
  user-select none
  &.router-link-exact-active
    background color2 - 20
    border-color color2 - 60
    box-shadow 0 3px 0 color2 - 60, 0 6px 10px color4, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3,.3)
    color color1
    text-shadow 0 1px 3px color4
    transform translateY(-3px)
  &:hover
    background color5
    border-color color5 - 60
    box-shadow 0 3px 0 color5 - 60, 0 6px 30px rgba(color5, .6), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color4,.3)
    color color1
    text-shadow 0 1px 3px color2 - 130
    transform translateY(-3px)
    svg
      filter drop-shadow(0px 1px color2 - 100)
  &:active
    background color2 - 20
    border-color color2 - 60
    box-shadow 0 0px 0 color3 - 60, 0 3px 10px color2 - 100, inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(color3,.3)
    color color2 - 100
    transform translateY(0)
    path
      fill color2 - 100
  svg
    height 20px
    width 25px
    margin-right 10px
    margin-bottom -3px
  path
    fill color1
    transition .3s all
  &.bullet
    height 30px !important
    padding 0 !important
    position absolute
    right 12px
    top 13px
    width 30px !important
    &:last-of-type
      right 33px
  &.plus,
  &.delete
    box-shadow 0 0px 0 color3 - 60, 0 3px 10px rgba(#000, .1), inset 0 2px rgba(#fff,.6), inset 0 -2px 13px rgba(red - 22,.3)
    color color1
    text-shadow 0 2px 3px rgba(#000, .6)
    span
      font-size 2em
      left 20px
      position absolute
  &.plus
    background green + 55 !important
    border-color green - 22 !important
    &:active
      background green !important
      color green - 90
  &.delete
    background red + 55 !important
    border-color red - 66 !important
    &:active
      background red - 50 !important
      color red - 190
    & + .plus
      margin-right 1em !important
  &.large
    &.active
      width auto
      &.pluralization,
      &.theme_app
        padding-left 25px
        +desktop()
          padding-left 35px
    select
      background #fff
      border-radius 4px
      color #333
      padding 5px
      position relative
      top -13px
      left -20px
      +desktop()
        top -15px
    +desktop()
      padding 30px
  .icon
    width 42px
    height 45px
    position absolute
    top 0
    right 0
    cursor pointer
    +desktop()
      width 58px
      height 62px
    svg
      margin 0
.menu
  height 45px
  left 10px
  padding 10px 0
  position fixed
  top 10px
  width 45px
  z-index 999
  &:hover span
    background color1
    transform scale(.6)
  span
    background color1
    border-radius 4px
    display block
    height 2px
    margin 0 auto 6px
    transition .3s transform
    width 70%
    &:last-of-type
      margin 0 auto
  +tablet()
    transform translateX(-100px)
    transition .3s transform

