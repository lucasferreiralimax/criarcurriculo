button
  border 0
  padding 0
  outline none
.btn
  background color4 + 30
  border 1px solid color4
  border-radius 6px
  box-shadow inset 0 2px rgba(#fff, .2), inset 0 -2px 4px rgba(#000, .1)
  text-shadow 0 2px 1px rgba(#000, .3)
  box-sizing border-box
  color color1
  cursor pointer
  display block
  font-size 1.1em
  font-weight 100
  line-height 23px
  margin-right 1em
  outline none
  padding 20px
  position relative
  text-decoration none
  transition .3s all
  user-select none
  &:last-of-type
    margin-right 0
  &.router-link-exact-active
    background color2 - 20
    border-color color2 - 60
    color color1
  &:hover
    background color5
    border-color color5 - 60
    color color1
  &.small
    width 30px
    height 30px
    padding 0
  &.large
    width 100%
  &.delete
    background red - 30
    border-color red - 60
    &:hover
      background red + 60
  &.plus
    background green + 30
    border-color green - 30
    &:hover
      background green + 60
  &#reset,
  &#print
    display inline-block
    width calc(100% - .5em)
    margin-bottom 1em
    margin-right 0
    +tablet()
      margin-right 1em
      width calc(50% - .5em)
  &#print
    +tablet()
      margin-right 0
  &.pluralization,
  &.theme_app
    margin 0
    padding 0
    z-index 9
    .icon
      display inline-block
      float right
      padding 1em
      width auto
    select
      display inline-block
      float left
      font-size .8em
      margin .5em
      padding .5em
      width auto
  span
    display inline-block
    margin-right .5em
  svg
    height 20px
    margin-bottom -3px
    margin-right 10px
    width 25px
    filter drop-shadow(0 2px 1px rgba(#000, .4))
  path,
  circle
    fill color1
    transition .3s all
  .icon
    cursor pointer
    right 0
    top 0
    width 100%
    svg
      margin 0
.menu
  height 50px
  left 10px
  padding 10px 0
  position fixed
  top 10px
  width 50px
  z-index 999
  &:hover span
    background color1
    transform scale(.6)
  span
    background color1
    border-radius 4px
    display block
    height 2px
    margin 0 auto 6px
    transition .3s transform
    width 70%
    &:last-of-type
      margin 0 auto
  +tablet()
    transform translateX(-100px)
    transition .3s transform
