input, textarea, select
  background #fff
  border 1px solid #fff
  border-radius 6px
  box-sizing border-box
  font-size 1em
  margin 1em auto 0
  padding 1em
  text-overflow ellipsis
  transition .3s all
  width 100%
  +break(370px)
    padding 10px
  &[type="radio"],
  &[type="checkbox"]
    margin 0
    margin-right 1em
    max-width auto
    min-width auto
    width auto
  &.el-input__inner
    padding 25px 0
    margin 0
    border-radius 6px
    color #000

.el-date-editor
  margin 1em auto 0

.el-select-dropdown.el-popper
  min-width auto !important

.el-input.is-focus .el-input__inner
  border-color rgba(#000, 0) !important

.el-input__inner:focus
  color #000 !important
  border-color rgba(#000, 0) !important

.el-select
  .el-input__suffix
    right 0
    top 2px
    pointer-events none
    *
      pointer-events none
  .el-input__inner
    height 30px
    padding 2px 2px 2px 10px
    margin-top 8px
    box-sizing border-box
    width calc(100% - 10px)
    color #000
    font-size 1em
    &:focus
      border-color rgba(#000, 0) !important

.el-select-dropdown__item
  font-weight normal
  text-align left
  &.selected
    color #000 !important
    font-weight bold

[for='GET-genero']
  .el-input__inner
    height 52px
    margin-top 15px
    width 100%
    padding-left 1em
    font-size 1.2em
    +break(370px)
      height 41px
  .el-input__suffix
    right 10px
    top 5px

textarea
  resize vertical

input[type="file"]
  padding .8em

select
  padding .96em

label, select,
input[type="file"],
input[type="radio"],
input[type="checkbox"]
  cursor pointer
  user-select none

.radio
  position: relative

label, legend, .radio > p:not(.error-msg)
  box-sizing border-box
  display block
  padding .77em
  transition .3s background

label
  position: relative
  &:hover,
  &.active
    background rgba(#fff, .9)
    input, textarea, select, .photo
      box-shadow 0 0 0 4px rgba(#000, .2)
      &[type="radio"]
        box-shadow none
  &:active
    background rgba(#fff, .6)
    input, textarea
      box-shadow 0 0 0 2px rgba(#000, .2)
      &[type="radio"]
        box-shadow none

legend
  background rgba(color2, 1)
  color color4
  font-size 1em
  position relative
  width 100%
  padding 1em
  box-shadow inset 0 0 0 2px rgba(#fff, .2)
  &:hover
    background rgba(color2 + 20, 1)
  +break(370px)
    font-size .8em
  span
    display block
    left 5px
    position relative
    top 4px
    width calc(100% - 90px)
    +break(370px)
      width calc(100% - 30px)
    +tablet()
      top 7px
  .icon
    fill color4
    float left
    margin-right .5em
    +tablet()
      width 30px
  .actions
    position absolute
    right 15px
    top calc(50% - 15px)
    .btn
      &:last-of-type
        margin-left 10px
      svg
        transform scale(.6)

+htmlDir()
  legend
    .icon
      float right
      margin-left .5em
      margin-right auto
    .actions
      left 15px
      right auto
      .btn:last-of-type
        margin-left 0
        margin-right 10px
  input, textarea, select
    &[type="radio"],
    &[type="checkbox"]
      margin-right 0
      margin-left 1em
  .el-popper .popper__arrow::after
    left 0
