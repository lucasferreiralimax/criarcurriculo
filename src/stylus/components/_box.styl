.box
  border-radius 6px
  margin-bottom 2em
  &.active
    overflow hidden
  & .flexbox > label,
  & .flexbox > .radio
    &:last-child
      border-radius 0 0 6px 6px
  & .flexbox > label[for="GET-email"],
  & .flexbox > .radio
    &:last-child
      +desktop()
        border-radius 0 0 6px 0
  .btn
    margin-top 10px

  &.course,
  &.experience
    margin-bottom 2em
    &.active
      height 60px
      overflow hidden
      overscroll-behavior contain
    & .flexbox > label
      &:last-child
        border-radius 0 0 6px 6px
  fieldset
    display block
    position relative
    &.course,
    &.experience
      margin-bottom 2em
      &:last-of-type
        margin-bottom 0
    & legend:first-child
      border-radius 6px 6px 0 0
      cursor pointer
      user-select none
      &:before
        content '-'
        margin-right 15px
        position relative
    &.active
      border-radius 6px
      height 60px
      overflow hidden
      & legend:first-child
        &:before
          content '+'
.flexbox
  display flex
  flex-wrap wrap
  flex 1
  label[for="GET-address-number"],
  label[for="GET-course"],
  label[for="GET-coursedata"],
  label[for="GET-exps"],
  label[for="GET-exps"],
  label[for="GET-expsdata"],
  label[for="GET-name"],
  label[for="GET-company"],
  label[for="GET-school"],
  label[for="GET-state"],
  label[for="GET-photo"],
  .input__contato,
  .address,
  .radio,
  .select-maritals
    width 100%
    +desktop()
      box-sizing border-box
      width 50%
  label[for="GET-about"],
  label[for="GET-address"],
  label[for="GET-courseabout"],
  label[for="GET-expsabout"],
  label[for="GET-genero"],
  label[for="GET-dataofbirth"]
  .course_now,
  .exps_now
    box-sizing border-box
    width 100%
