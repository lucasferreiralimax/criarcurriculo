{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
        {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers" : [{
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        }]
       },
       {
        "source" : "**/*.@(js|json|css)",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "max-age=604800"
        }]
       },
       {
        "source" : "**/*.@(jpg|jpeg|gif|png)",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "max-age=604800"
        }]
       },
       {
        "source" : "404.html",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "max-age=300"
        }]
      }
    ]
  }
}
